<!DOCTYPE html>
<body>
<ul>
  {% for kind, thing, issues in results -%}
    <li>{{ kind }} {{thing}}
      <ul>
        {% for issue in issues -%}
          <li class="issue {{ issue.state }}">
            <a href="{{ issue.url }}">{{ issue.number }}: {{issue.title}}</a>
            [{{ issue.author.login }}]
            <ul>
              {% for comment in issue.comments.nodes -%}
                <li>
                  {# <img src="{{comment.author.avatarUrl}}&size=20"/> #}
                  <a href="{{ comment.url }}">{{ comment.updatedAt|datetime("%m-%d %H:%M") }}</a>
                  [{{ comment.author.login }}]
                  {{ comment.body|trim|truncate(120) }}
                </li>
              {% endfor %}
            </ul>
          </li>
        {% endfor %}
      </ul>
    </li>
  {% endfor %}
</ul>
